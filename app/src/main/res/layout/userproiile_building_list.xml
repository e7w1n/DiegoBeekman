<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diegobeekman_basicactivity.UserProfile.BuildingListActivity">

    <!-- remember in order to display a collection of text you need a recyclerview for another file to display a bunch text -->
    <!-- This is the file which contain the recycleview  for the file com.example.schedule.Buildings.BuildingsListActivity -->
    <!-- to list down all the text a line at a time !-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_buildings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>